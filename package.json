{
  "name": "sparkx",
  "version": "0.0.15",
  "description": "MVC framework with flux implementation for state management.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "jsnext:main": "lib-esm/index.js",
  "module": "lib-esm/index.js",
  "prepublishOnly": "npm run build",
  "scripts": {
    "check-all": "npx run-s lint test",
    "clean": "shx rm -rf _bundles lib lib-esm",
    "compile": "npm run clean && tsc && tsc -m es6 --outDir lib-esm",
    "bundle": "NODE_ENV=production webpack",
    "build": "npx run-s compile bundle",
    "prepare": "npx run-s check-all build",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pushkar8723/sparkx.git"
  },
  "keywords": [
    "react",
    "mvc"
  ],
  "author": "Pushkar Anand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pushkar8723/sparkx/issues"
  },
  "homepage": "https://github.com/pushkar8723/sparkx#readme",
  "peerDependencies": {
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "files": [
    "lib/**/*",
    "lib-esm/**/*",
    "core/**/*",
    "react/**/*",
    "services/**/*"
  ],
  "dependencies": {
    "@uirouter/react": "^0.8.9",
    "axios": "^0.18.0",
    "immutable": "^4.0.0-rc.12",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.4",
    "@types/jest": "^24.0.13",
    "@types/prop-types": "^15.7.1",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/react-redux": "^7.0.9",
    "awesome-typescript-loader": "^5.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.1",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.4.5",
    "webpack": "^4.32.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2"
  },
  "pre-commit": "check-all",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "moduleNameMapper": {
      "^src(.*)$": "<rootDir>/src$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ]
  }
}
